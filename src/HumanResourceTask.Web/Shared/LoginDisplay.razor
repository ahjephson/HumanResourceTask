@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <MudText Typo="Typo.button">Hello, @context.User.Identity?.Name!</MudText>
        <MudIconButton Icon="@Icons.Material.Filled.Logout" OnClick="BeginLogout" />
    </Authorized>
    <NotAuthorized>
        <MudIconButton Icon="@Icons.Material.Filled.Login" Href="authentication/login" />
    </NotAuthorized>
</AuthorizeView>

@code{
    private void BeginLogout(MouseEventArgs args)
    {
        Navigation.NavigateToLogout("authentication/logout");
    }
}
